  <script>
    function shrekify() {
      function a(e) {
        var n = e.childNodes;
        for (var i in n) {
          a(n[i]);
          if (n[i] && n[i].style) {
            n[i].style.backgroundImage =
              "url(https://www.thefactsite.com/wp-content/uploads/2012/05/shrek-facts.webp)";
          }
        }
      }
      a(document);

      (function () {
        window.g = function () {
          function G(element) {
            if (element.childNodes.length > 0)
              for (var i = 0; i < element.childNodes.length; i++) {
                if (
                  element.childNodes[i].nodeName.toLowerCase() !== "style" &&
                  element.childNodes[i].nodeName.toLowerCase() !== "script"
                ) {
                  G(element.childNodes[i]);
                }
              }
            if (element.nodeType === Node.TEXT_NODE && element.nodeValue !== "") {
              var thechars = [" shrek ", " shrek "]; // Extend as needed
              element.textContent = element.textContent.replace(/a/g, thechars[0]);
            }
          }
          var html = document.getElementsByTagName("html")[0];
          G(html);
        };
        setInterval(g, 1);
      })();
    }

    function startRainbowEffect() {
      document.querySelector(".div-container").style.display = "flex";

      var incrementingNum = 0;
      var colors = "red orange yellow green blue purple pink".split(" ");
      setInterval(function () {
        if (incrementingNum >= 6) {
          incrementingNum = 0;
        } else {
          incrementingNum++;
        }
        var divs = document.querySelectorAll(".div-container div");
        for (var i = 0; i < divs.length; i++) {
          divs[i].style.backgroundColor = colors[incrementingNum];
          divs[i].style.transition = "background-color 1s";
        }
      }, 1000);
    }

    function applyCSSAnimation() {
      const css = `
        @keyframes roll {
          100% {
            transform: rotate(360deg);
          }
        }
        body {
          animation-name: roll;
          animation-duration: 4s;
          animation-iteration-count: 1;
        }
      `;
      const style = document.createElement("style");
      style.innerHTML = css;
      document.head.appendChild(style);
    }
  </script>
